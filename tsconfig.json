{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "lib": ["es2015", "es2016", "es2017","esnext"],
        "allowJs": false,
        "strict": false,
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.json"
    ]
}
